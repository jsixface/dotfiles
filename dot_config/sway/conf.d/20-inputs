
input type:touchpad {
    tap enabled
    natural_scroll disabled
}

input type:mouse {
    natural_scroll disabled
	accel_profile flat
}

input type:keyboard {
    xkb_numlock enabled
}

# Configure screenshots. 
bindsym Print exec 'grim -g "$(slurp)" - | swappy -f -'
bindsym $mod+Print exec $HOME/bin/sway-screenshot


# Configure Audio controls. 
set $volumeUp "pactl set-sink-volume @DEFAULT_SINK@ +1000"
set $volumeDown "pactl set-sink-volume @DEFAULT_SINK@ -1000"
set $volumeMute "pactl set-sink-mute @DEFAULT_SINK@ toggle"

bindsym XF86AudioLowerVolume exec $volumeDown
bindsym XF86AudioRaiseVolume exec $volumeUp
bindsym XF86AudioMute exec $volumeMute

bindsym $mod+F1 exec $volumeDown
bindsym $mod+F2 exec $volumeUp
bindsym $mod+F3 exec $volumeMute


bindsym XF86MonBrightnessDown exec "light -U 10"
bindsym XF86MonBrightnessUp exec "light -A 10"